{
  "name": "@0xcert/ethereum-erc721",
  "version": "2.2.0",
  "description": "Non-fungible token standard implementation for the Ethereum blockchain.",
  "scripts": {
    "compile": "specron compile",
    "sandbox": "specron sandbox",
    "prepare": "specron compile",
    "test": "specron compile && specron test",
    "solhint": "solhint src/**/*.sol"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "flattener": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "test": {
      "match": [
        "./src/**/*.test.*"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "author": "0xcert",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xcert/ethereum-erc721.git"
  },
  "bugs": {
    "url": "https://github.com/0xcert/etheethereum-erc721reum/issues"
  },
  "homepage": "https://github.com/0xcert/ethereum-erc721#readme",
  "keywords": [
    "ethereum",
    "blockchain",
    "eth",
    "contract",
    "contracts",
    "smart",
    "smart-contract",
    "smart-contracts",
    "token",
    "tokens",
    "nft",
    "nfts",
    "non-fungible",
    "non-fungibles",
    "eip",
    "erc",
    "erc721",
    "erc-721",
    "deed",
    "standard"
  ],
  "devDependencies": {
    "@specron/cli": "0.15.1",
    "@specron/flattener": "0.15.1",
    "@specron/spec": "0.15.1",
    "@types/node": "13.7.0",
    "solc": "0.6.2",
    "solhint": "2.3.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5",
    "web3": "1.2.5-rc.0"
  }
}
